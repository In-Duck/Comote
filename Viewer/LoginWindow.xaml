
<Window x:Class="Viewer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KYMOTE - Login" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#1E1E1E">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="KYMOTE LOGIN" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <TextBlock Text="Email" Foreground="#AAAAAA" Margin="0,5"/>
            <TextBox Name="txtEmail" Height="30" Padding="5" Background="#333333" Foreground="White" BorderThickness="0"/>
            
            <TextBlock Text="Password" Foreground="#AAAAAA" Margin="0,15,0,5"/>
            <PasswordBox Name="txtPassword" Height="30" Padding="5" Background="#333333" Foreground="White" BorderThickness="0"/>
            
            <CheckBox Name="chkSave" Content="Save Login" Foreground="White" Margin="0,15,0,0"/>
            
            <Button Name="btnLogin" Content="LOGIN" Height="40" Margin="0,20,0,0" 
                    Background="#FFD700" Foreground="Black" BorderThickness="0" FontWeight="Bold"
                    Click="btnLogin_Click"/>
            
            <TextBlock Name="lblStatus" Text="" Foreground="#FF4444" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
